<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EditarPerfilArtista"
    android:id="@+id/drawer_editarperfil">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.7dp"
            android:layout_marginRight="15.7dp"
            android:orientation="vertical"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:text="Tipo de servicio"
                android:textColor="@color/black"
                android:textSize="20dp" />


            <Spinner
                android:id="@+id/idTipoServicioPerfilEditar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                tools:ignore="SpeakableTextPresentCheck" />


            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Nombre Grupo"
                app:counterEnabled="true"
                app:counterMaxLength="40"
                app:helperText="Required"
                app:startIconDrawable="@drawable/idguitarra">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/idNombreGrupoPerfilEditar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Describe tu agrupacion"
                app:counterEnabled="true"
                app:counterMaxLength="200"
                app:helperText="Required"
                app:startIconDrawable="@drawable/idcalle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/idDescripcionPerfilEditar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="380dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Logotipo"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/idImageLogoPerfilEditar"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="36dp"
                android:src="@drawable/cargaricon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/idLogoPEditar"
                    android:layout_width="280dp"
                    android:layout_height="60dp"
                    android:layout_gravity="left"
                    android:drawableLeft="@drawable/idlogo"
                    android:enabled="false"
                    tools:ignore="SpeakableTextPresentCheck" />

                <ImageButton
                    android:id="@+id/idCargarImagenPerfilEditar"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/foto"
                    android:text="Logo"
                    app:cornerRadius="20dp" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Direccion"
                app:counterEnabled="true"
                app:counterMaxLength="40"
                app:helperText="Required"
                app:startIconDrawable="@drawable/idcalle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/idDireccionPerfilEditar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Municipio"
                app:counterEnabled="true"
                app:counterMaxLength="40"
                app:helperText="Required"
                app:startIconDrawable="@drawable/idgps">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/idMunicipioPerfilEditar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Genero Musical"
                android:textSize="15dp" />

            <Spinner
                android:id="@+id/idGeneroMusicalPerfilEditar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"

                android:layout_marginTop="10dp" />

            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Telefono"
                app:counterEnabled="true"
                app:counterMaxLength="10"
                app:helperText="Required"
                app:startIconDrawable="@drawable/idtelefono">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/idTelefonoGrupoPerfilEditar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                app:counterEnabled="true"
                app:counterMaxLength="50"
                app:helperText="Required"
                app:startIconDrawable="@drawable/idcorreo">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/idCorreoGrupoPerfilEditar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress" />

            </com.google.android.material.textfield.TextInputLayout>




            <Button
                android:id="@+id/idConfirmarEditar"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/orange"
                android:text="Guardar"
                android:textColor="@color/black"
                app:cornerRadius="15dp" />

            <Button
                android:id="@+id/idCancelarPerfilEdision"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/orange"
                android:text="Cancelar"
                android:textColor="@color/black"
                app:cornerRadius="15dp" />

        </LinearLayout>

    </ScrollView>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbareditarperfil"
        ></include>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/content_main"
        ></include>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/idNavegationViewArtista"
        app:menu="@menu/main_menuartista"
        app:headerLayout="@layout/header_menuartista"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"/>

</androidx.drawerlayout.widget.DrawerLayout>