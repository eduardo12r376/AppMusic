<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PerfilContratacion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_perfilContra">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily=""
            android:orientation="vertical"
            android:text="Perfil Contratacion">




            <ImageView
                android:id="@+id/idLogoPerfil"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="70dp" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="60dp"
                android:layout_marginTop="20dp"
                android:text="Genero Musical"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/idGeneroMusicalP"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="60dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/idguitarra"
                android:textSize="20dp" />
            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="60dp"
                android:layout_marginTop="20dp"
                android:text="Numero integrantes"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/idTipoServicioPer"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="60dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/idguitarra"
                android:textSize="20dp" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="60dp"
                android:layout_marginTop="20dp"
                android:text="Nombre Agrupación"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/idNombregrupoP"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="60dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/idguitarra"
                android:textSize="20dp" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="60dp"
                android:layout_marginTop="20dp"
                android:text="Descripción"
                android:textColor="@color/black"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/idDescripcionP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="50dp"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/idFechasD"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@color/orange"
                android:text="Fechas"
                android:textColor="@color/black" />


            <CalendarView
                android:layout_width="wrap_content"
                android:layout_height="290dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"></CalendarView>



            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Informacion de Contato"
                android:textSize="20dp" />



            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Telefono"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/idNumerop"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/idtelefono"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Correo"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/idMailp"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/idcorreo"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Ubicación"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/idDireccionP"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/idgps"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/idContratar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="50dp"
                android:textColor="@color/black"
                app:cornerRadius="15dp"
                tools:text="Contratar"/>

        </LinearLayout>
    </ScrollView>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbarperfilcontra"
        ></include>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/content_main"
        ></include>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/idNavegationView"
        app:menu="@menu/main_menu"
        app:headerLayout="@layout/header_menu"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"/>
</androidx.drawerlayout.widget.DrawerLayout>